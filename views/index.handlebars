<h1>Burgers!</h1>

<div class = "notDevouredList" >

<h2>Burgers that haven't been devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      <li>
        {{this.burger_name}}
      </li>
      <button class = "devourbtn" data-id= {{this.id}} data-newDevour="{{devoured}}">
        Devour!
      </button>
    {{/unless}}
  {{/each}}
</ul>

</div>

<div class = "newBurger">

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="brgr" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>

<div class = "devouredList">

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>
        {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>

</div>

